<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.shohiebsense.idiomaticsynonym">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".XprediomApplication"
        android:allowBackup="false"
        android:authorities="${applicationId}.contentprovider"
        android:icon="@mipmap/ic_launcher_official"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_official"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme.Red"
        tools:replace="android:allowBackup">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/API_TRANSLATE_KEY" />
        <meta-data
            android:name="CLOUDINARY_URL"
            android:value="cloudinary://@shohiebsense" />



        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.shohiebsense.idiomaticsynonym.view.activity.home.MainActivity" />
        <activity android:name="com.shohiebsense.idiomaticsynonym.view.activity.detail.DetailActivity" />
        <activity android:name=".obsoletes.BookmarkedActivity" />
        <activity android:name=".view.activity.underlining.UnderliningActivity" />
        <activity android:name=".obsoletes.DriveSignInActivity" />
        <activity
            android:name=".obsoletes.DriveCreateFileActivity"
            android:noHistory="true" />
        <activity android:name=".obsoletes.DriveOpenFileActivity" />
        <activity android:name="com.onegravity.rteditor.media.choose.MediaChooserActivity" />
        <activity android:name="com.onegravity.rteditor.media.crop.CropImageActivity" />
        <activity android:name=".view.activity.editor.ContentEditorActivity" />
        <activity android:name=".view.activity.setting.SettingsActivity" />
        <activity
            android:name=".view.activity.setting.LanguageSettingActivity"
            android:noHistory="true" />
        <activity android:name=".view.activity.createfile.CreateFileActivity"></activity>

    </application>

</manifest>