<resources>

    <!-- Base Theme -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Attributes for all APIs -->
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CommonToolbarStyle">
        <item name="android:layout_height">?android:attr/actionBarSize</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Default Dialog Theme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog"></style>

    <!-- Default Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert"></style>


    <!-- Default App Theme -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- API specific attributes 14+ -->
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="colorAccent">@color/for_elder_mexican_red</item>
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="titleTextColor">@color/md_white_1000</item>
        <item name="android:itemBackground">@color/secondaryColor</item>

    </style>
    <!-- Red Dialog Theme -->
    <style name="AppTheme.Dialog.Red">
        <item name="colorPrimary">@color/material_red_500</item>
        <item name="colorPrimaryDark">@color/material_red_700</item>
        <item name="colorAccent">@color/material_red_a700</item>
    </style>


    <!-- Red App Theme -->
    <style name="BaseTheme.Red" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/other_red</item>
        <item name="colorPrimaryDark">@color/other_red</item>
        <item name="colorAccent">@color/material_red_a700</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Red</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Red</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/baseline_more_vert_white_24</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Lala"</item>
    </style>

    <!-- Red Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Red">
        <item name="colorPrimary">@color/for_elder_mexican_red</item>
        <item name="colorPrimaryDark">@color/material_red_700</item>
        <item name="colorAccent">@color/material_red_a700</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="subtitleTextView">
        <item name="android:textSize">@dimen/subtitle_text</item>
    </style>


    <!-- not working -->
    <style name="matchParentWidthView">
        <item name="android:layout_width">0dp</item>
        <!-- <item name="app:layout_constraintLeft_toLeftOf">parent</item>
        <item name="app:layout_constraintStart_toStartOf">parent</item>
        <item name="app:layout_constraintEnd_toEndOf">parent</item>
        <item name="app:layout_constraintRight_toRightOf">parent</item>-->
    </style>

    <style name="topAndFullWidthView" parent="matchParentWidthView">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <!-- end not working -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/md_white_1000</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/custom_dialog</item>
    </style>

    <style name="SherifDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="android:fontFamily">serif</item>
    </style>


    <style name="ColoredButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/long_round_button</item>
        <item name="android:textColor">@color/soft_white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/widget_container_padding</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="ColoredSquareRedButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@color/other_red</item>
        <item name="android:textColor">@color/soft_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/widget_container_padding</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ColoredSquareRedToggleButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/button_toggle</item>
        <item name="android:textColor">@color/soft_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/widget_container_padding</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RootLayoutWithMargin">
        <item name="android:layout_marginLeft">@dimen/margin_layout_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_layout_standard</item>
        <item name="android:layout_marginRight">@dimen/margin_layout_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_layout_standard</item>
    </style>

    <style name="RootLayoutWithVerticalMargin">
        <item name="android:layout_marginTop">@dimen/margin_layout_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_layout_standard</item>
    </style>

    <style name="WidgetContainerPadding">
        <item name="android:paddingLeft">@dimen/margin_item_standard</item>
        <item name="android:paddingTop">@dimen/margin_layout_standard</item>
        <item name="android:paddingRight">@dimen/margin_item_standard</item>
        <item name="android:paddingBottom">@dimen/margin_layout_standard</item>
    </style>

    <style name="RootPadding">
        <item name="android:paddingLeft">@dimen/margin_layout_standard</item>
        <item name="android:paddingTop">@dimen/margin_layout_standard</item>
        <item name="android:paddingRight">@dimen/margin_layout_standard</item>
        <item name="android:paddingBottom">@dimen/margin_layout_standard</item>
    </style>

    <!--text -->
    <style name="TitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TitleTextLight" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/md_white_1000</item>

        <item name="android:fontFamily">serif</item>
    </style>

    <style name="SubTitleSizeText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="ContentText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="ContentTextLight" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="CaptionText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="EmptyText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BaseTheme.Red.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BaseTheme.Red.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- endText -->
</resources>
