<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_container_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/inputNumberFromEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_image_margin"
        android:layout_marginEnd="@dimen/toolbar_image_margin"
        android:gravity="center"
        android:ellipsize="end"
        app:layout_constraintRight_toLeftOf="@+id/dashTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/dashTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="36sp"
        app:layout_constraintRight_toLeftOf="@+id/inputNumberToEditText"
        app:layout_constraintLeft_toRightOf="@+id/inputNumberFromEditText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/inputNumberFromEditText"
        android:textColor="@color/secondaryDarkColor"
        android:text="-"
        />

    <EditText
        android:id="@+id/inputNumberToEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/toolbar_image_margin"
        android:layout_marginEnd="@dimen/toolbar_image_margin"
        android:gravity="center"
        android:ellipsize="start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dashTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/inputNumberFromEditText"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/limitNumberPageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/toolbar_image_margin"
        android:layout_marginStart="@dimen/toolbar_image_margin"
        app:layout_constraintTop_toBottomOf="@+id/inputNumberFromEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dividerHeader"
        android:textColor="@color/secondaryDarkColor"
        android:text="@string/number_of_pages_allowed"
        />

    <View
        android:id="@+id/dividerHeader"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/limitNumberPageTextView"
        app:layout_constraintBottom_toTopOf="@+id/okButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/RootLayoutWithVerticalMargin"
        android:background="?android:attr/dividerVertical"
        />

    <Button
        android:id="@+id/okButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/ColoredButton"
        android:text="@string/ok"
        android:enabled="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dividerHeader" />

</android.support.constraint.ConstraintLayout>