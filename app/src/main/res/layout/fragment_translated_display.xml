    <android.support.constraint.ConstraintLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/secondaryDarkColor"
        app:behavior_hideable="true"
        android:padding="@dimen/activity_margin"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryColor"
            app:layout_constraintBottom_toTopOf="@+id/kategloItemRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/kategloItemRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/collectIdiomButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/dividerView">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/collectIdiomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_choose"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kategloItemRecyclerView" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>