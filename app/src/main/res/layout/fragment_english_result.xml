<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shohiebsense.idiomaticsynonym.view.fragment.translateddisplay.EnglishResultFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_constraint"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <eightbitlab.com.blurview.BlurView
            android:id="@+id/topBlurView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:outlineProvider="bounds"
            app:blurOverlayColor="#78ffffff"
            android:visibility="gone"
            tools:targetApi="lollipop">


        <com.hanks.htextview.fade.FadeTextView
            android:id="@+id/fadeTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:letterSpacing="0.08"
            android:lineSpacingMultiplier="1.3"
            android:text="This is FadeTextView"
            android:textSize="20sp"
            app:animationDuration="1500"/>

        </eightbitlab.com.blurview.BlurView>


        <ScrollView
            android:id="@+id/englishScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/englishTextsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/RootPadding"
                android:text="@string/hello_blank_fragment" />

        </ScrollView>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/secondaryDarkColor"
        app:behavior_hideable="true"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/activity_margin"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <ImageView
            android:id="@+id/dropDownView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_drop_down_white_24"
            app:layout_constraintBottom_toTopOf="@+id/dividerView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"/>

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryColor"
            app:layout_constraintBottom_toTopOf="@+id/idiomRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dropDownView"
            app:layout_constraintVertical_chainStyle="spread_inside"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/idiomRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerView">

        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
