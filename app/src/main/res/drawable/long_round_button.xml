<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="24dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="@color/other_red" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="24dip" />
            <stroke android:width="1dip" android:color="@color/other_red" />
            <solid android:color="@color/other_red" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="24dip" />
            <stroke android:width="1dip" android:color="@color/blue_grey_500" />
            <solid android:color="@color/blue_grey_500" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="24dip" />
            <stroke android:width="1dip" android:color="@color/other_red" />
            <solid android:color="@color/other_red" />
        </shape>
    </item>
</selector>